<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:elevation="15dp"
        android:backgroundTint="@color/cardbg"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_home_24" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/company_logo"
        android:layout_alignTop="@id/company_logo"
        android:layout_marginStart="16dp"
        android:text="Slack"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/packag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_name"
        android:layout_toRightOf="@id/company_logo"
        android:layout_marginStart="16dp"
        android:text="5+"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_logo"
        android:layout_alignLeft="@id/company_logo"
        android:layout_marginTop="8dp"
        android:text="Sr. Product Designer"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_title"
        android:layout_alignLeft="@id/company_logo"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:text="Full Time - New York City"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/location_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/experience"
        android:layout_alignLeft="@id/company_logo"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Remote"
            android:textColor="@color/white"
            android:paddingRight="10dp"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/anywhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="Anywhere"
            android:textSize="14sp" />

    </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>